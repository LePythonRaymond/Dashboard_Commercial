# Furious API Configuration
FURIOUS_API_URL=https://merciraymond.furious-squad.com/api/v2
FURIOUS_USERNAME=your_username
FURIOUS_PASSWORD=your_password

# Google Sheets Configuration (OAuth 2.0)
# Download OAuth credentials from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Desktop app), then download JSON
GOOGLE_OAUTH_CREDENTIALS_PATH=config/credentials/oauth_credentials.json
GOOGLE_OAUTH_TOKEN_PATH=config/credentials/oauth_token.json

# Spreadsheet IDs by type and year
# Format: SPREADSHEET_{TYPE}_{YEAR}
# Types: ETAT (État au), ENVOYE (Envoyé), SIGNE (Signé)

# 2025 Spreadsheets
SPREADSHEET_ETAT_2025=your_spreadsheet_id_etat_2025
SPREADSHEET_ENVOYE_2025=your_spreadsheet_id_envoye_2025
SPREADSHEET_SIGNE_2025=your_spreadsheet_id_signe_2025

# 2026 Spreadsheets
SPREADSHEET_ETAT_2026=your_spreadsheet_id_etat_2026
SPREADSHEET_ENVOYE_2026=your_spreadsheet_id_envoye_2026
SPREADSHEET_SIGNE_2026=your_spreadsheet_id_signe_2026

# 2027 Spreadsheets (for future projections)
SPREADSHEET_ETAT_2027=your_spreadsheet_id_etat_2027
SPREADSHEET_ENVOYE_2027=your_spreadsheet_id_envoye_2027
SPREADSHEET_SIGNE_2027=your_spreadsheet_id_signe_2027

# Legacy single spreadsheet (optional, for backward compatibility)
# SPREADSHEET_ID=your_legacy_spreadsheet_id

# SMTP Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Notion Configuration
# Database ID can be stored with or without dashes - code will format automatically
# Extract from Notion URL: https://www.notion.so/workspace/DATABASE_ID?v=...
# Format with dashes: 2c5d9278-02d7-8050-8bce-000c6d18fe6e
NOTION_API_KEY=your_notion_api_key

# Database for Travaux Gantt (existing)
NOTION_DATABASE_ID=2c5d9278-02d7-8050-8bce-000c6d18fe6e

# Database for Weird Proposals alerts
# Create a database with properties: Name (title), ID Devis (text), Client (text),
# Montant (number), Statut (status), Date (date), Début projet (date), Fin projet (date),
# Responsable (people), Lien Furious (url), Probleme (multi-select)
#
# Possible values for Probleme multi-select:
# - "Montant faible (<1000€)"
# - "Date début manquante"
# - "Date fin manquante"
# - "Date début > Date fin"
# - "Probabilité 0%"
NOTION_WEIRD_DATABASE_ID=your_weird_database_id

# Database for Commercial Follow-up alerts
# Create a database with properties: Name (title), ID Devis (text), Client (text),
# Montant (number), Statut (status), Date (date), Début projet (date), Fin projet (date),
# Responsable (people), Lien Furious (url), Probabilite (number)
NOTION_FOLLOWUP_DATABASE_ID=your_followup_database_id
